<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TAM_proj">
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.TAM_proj" />
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SolveQuizActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionTestActivity"
            android:exported="false" />
        <activity
            android:name=".ViewQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".EditQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".EditQuizActivity"
            android:exported="false" />
        <activity
            android:name=".InfoActivity"
            android:exported="false" />
        <activity
            android:name=".AddQuestionActivity"
            android:exported="true" />
        <activity
            android:name=".AddQuizActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
    </application>

</manifest>